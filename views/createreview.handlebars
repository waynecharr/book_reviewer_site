{{!-- Bread crumbs back to dashboard --}}
<article>
    <br> &nbsp;
    <a href="/" class="go-back"> &larr; Back to dashboard</a>
    <br> &nbsp;
    {{!-- Create New Post Section --}}
    <div class="card" style="width: 70rem;">
        <div class="card-header">
            <h2>Create New Review</h2>
        </div>
        <div class="card-body">
            <form id="frmCreateReview">
                <div class="form-group">
                    <label for="bookSearch">Search Books</label>
                    <input type="text" id="search" name="search" class="form-control" oninput="searchBooks()" />
                    <div id="search-results"></div>
                </div>
                <div id="selected-book">
                    <div class="form-group">
                        <label for="bookTitle">Book Title</label>
                        <input readonly type="text" id="book-title" name="book-title" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="bookAuthor">Author</label>
                        <input readonly type="text" id="book-authors" name="book-authors" class="form-control" />
                    </div>
                    <div class="form-group">
                        <img id="book-cover">
                        <input type="hidden" id="book-cover-val" name="book-cover-val" class="form-control" />
                    </div>
                     <div class="form-group">
                    <label for="postText">Description</label>
                    <textarea readonly id="book-description" name="book-description" class="form-control" rows="10"></textarea>
                </div>
                </div>
                <div class="form-group">
                    <label for="reviewText">Review</label>
                    <textarea id="reviewText" name="reviewText" class="form-control" rows="10"></textarea>
                </div>
                <div class="form-group">
                    <label for="reviewRating">Rating: <label id="ratingValue">3</label></label><br>
                    <input type="range" min="1" max="5" value="3" step="0.1" id="ratingSlider">                                                                            
                </div>               
                <br>
                <button type="submit" class="btn btn-primary">Create</button>
            </form>
        </div>
    </div>
</article>
{{!-- Calls the JS File to call the related route and hit the realtive Restend point for creation of new review--}}
<script src="/js/searchbook.js"></script>
<script src="/js/createnewreview.js"></script>